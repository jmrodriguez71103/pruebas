<login>:
	name: "Login"

	
	MDCard:
		size_hint: None, None
		size: 400, 500
		pos_hint: {"center_x": 0.5, "center_y": 0.5}
		padding: 15
		spacing: 25
		orientation: 'vertical'
		md_bg_color: 0.85, 0.8, 0.72, 1

		MDLabel:
			id: prueba
			text: "Sistema Integral de Clientes"
			font_size: 40
			halign: 'center'
			size_hint_y: None
			padding_y: 10
		
		Image:
			source: "logo.jpeg"
			size_hint : None, None
			pos_hint: {"center_x": 0.5}
		
		MDTextField:
			id: nombre
			hint_text: "Usuario"
			icon_right: "account"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}
		
		MDTextField:
			id: psw
			hint_text: "Contrase√±a"
			icon_right: "lock"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}
			
		MDRoundFlatButton:
			id: boton1
			text: "Ingresar"
			size_hint: None, None
			width: 100
			pos_hint: {"center_x": 0.5}
			on_release: app.root.current = "Pantalla Principal"
			


<pantallaPrincipal>:
	name: "Pantalla Principal"
	
	
	MDBoxLayout:
		size: 1, 1
		orientation: "vertical"
		md_bg_color: 0.85, 0.8, 0.72, 1
		FloatLayout:
			id: flayout
			padding: 5
			
			MDLabel:
				markup: True
				text: "[color=#315582][i]Sistema Integral[/i][/color]"
				font_size: 26
				pos_hint: {"center_x": 0.50, "center_y": 0.95}
				
			MDLabel:
				markup: True
				text: "[color=#315582][i]de clientes[/i][/color]"
				font_size: 26
				pos_hint: {"center_x": 0.53, "center_y": 0.90}
				
			Image:
				source: "logo.jpeg"
				size_hint : None, None
				pos_hint: {"center_x": 0.5, "center_y": 0.95}

			MDRoundFlatButton:
				id: botonUsuario
				markup: True
				text: "[color=#315582][b]Usuario[/b][/color]"
				size_hint: None, None
				width: 100
				pos_hint: {"center_x": .95, "center_y": 0.95}
				md_bg_color: 0.85, 0.8, 0.72, 0
				
				
				
		
			MDRoundFlatButton:
				markup: True
				id: botonClientes
				text: "[color=#315582][b]Clientes[/b][/color]"
				font_size: 20
				size_hint: .2, None
				pos_hint: {"center_x": 0.5, "center_y": 0.65}
				on_release: app.root.current = "clientes"
				md_bg_color: 0.93, 0.69, 0.63, 0.2

			MDRoundFlatButton:
				id: botonEtapas
				markup: True
				text: "[color=#315582][b]Etapas[/b][/color]"
				font_size: 20
				size_hint: .2, None
				pos_hint: {"center_x": 0.5, "center_y": 0.55}
				on_release: app.root.current = "etapas"
				md_bg_color: 0.93, 0.69, 0.63, 0.2
			
			MDRoundFlatButton:
				id: botonPJN
				markup: True
				text: "[color=#315582][b]Poder Judicial[/b][/color]"
				font_size: 20
				size_hint: .2, None
				pos_hint: {"center_x": 0.5, "center_y": 0.45}
				md_bg_color: 0.93, 0.69, 0.63, 0.2
				on_release: app.abrirPJN()
			
			MDRoundFlatButton:
				id: botonMEV
				markup: True
				text: "[color=#315582][b]MEV[/b][/color]"
				font_size: 20
				size_hint: .2, None
				pos_hint: {"center_x": 0.5, "center_y": 0.35}
				md_bg_color: 0.93, 0.69, 0.63, 0.2
				on_release: app.abrirMEV()
			
			MDRoundFlatButton:
				id: botonCalendario
				markup: True
				text: "[color=#315582][b]Calendario[/b][/color]"
				font_size: 20
				size_hint: .2, None
				pos_hint: {"center_x": 0.5, "center_y": 0.25} 
				md_bg_color: 0.93, 0.69, 0.63, 0.2
				on_release: app.root.current = "calendario"
				
			MDRoundFlatButton:
				id: botonBuscar
				markup: True
				text: "[color=#315582][b]Buscar[/b][/color]"
				font_size: 20
				size_hint: .2, None
				pos_hint: {"center_x": 0.5, "center_y": 0.15}
				md_bg_color: 0.93, 0.69, 0.63, 0.2



