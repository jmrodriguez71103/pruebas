	MDCard:
		size_hint: 0.507, .85
		pos_hint: {"center_x": 0.75, "center_y": 0.41}
		padding: 15
		spacing: 5
		orientation: 'vertical'
		md_bg_color: 0.18, 0.23, 0.59, 0


		MDTextField:
			markup:True
			id: grados
			hint_text: "Grados"
			text: "0"
			size_hint: None, None
			#line_color_focus: 1, 1, 1, 1
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}


		MDLabel:
			markup: True
			id: estado
			text: "[color=#303f9f]Estado[/color]"
			font_size: 35
			halign: 'center'
			size_hint_y: None
			padding_y: 5


		MDTextField:
			id: pos_x
			text: app.text_x
			hint_text: "Ascension recta"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}



		MDTextField:
			id: pos_y
			text: app.text_y
			hint_text: "Declinacion"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}


		MDLabel:
			markup: True
			id: actualizarm
			text: "[color=#303f9f]Actualizar Manualmente[/color]"
			font_size: 35
			halign: 'center'
			size_hint_y: None
			padding_y: 10


		MDTextField:
			id: cambio_x

			hint_text: "Ascension recta"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}



		MDTextField:
			id: cambio_y

			hint_text: "Declinacion"
			size_hint: None, None
			width: 200
			font_size: 16
			pos_hint: {"center_x": 0.5}

		MDRectangleFlatButton:
			id: save
			text: "Enviar datos"
			width: 200
			height: 100
			pos_hint: {"center_x": 0.5}
			on_press: app.save()
